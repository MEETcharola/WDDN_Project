@model RESULTportal.Models.result_uploader

@{
    ViewBag.Title = "uploaderlogin";
}

<h2>Uploader Login</h2>

@using (Html.BeginForm("uploaderlogin", "result_uploader", FormMethod.Post))
{
    <fieldset>
        <legend>login as a result uploader</legend>

        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        @if (@ViewBag.Message != null)
        {
            <div style="text-align:center">
                @ViewBag.Message
            </div>
        }
        <table>
            <tr>
                <td>UID:</td>
                <td>@Html.TextBoxFor(a => a.UID)</td>
                <td>@Html.ValidationMessageFor(a => a.UID)</td>
            </tr>
            <tr>
                <td>
                    Password
                </td>
                <td>
                    @Html.PasswordFor(a => a.pssd)
                </td>
                <td>
                    @Html.ValidationMessageFor(a => a.pssd)
                </td>
            </tr>
            <tr>
                <td></td>
                <td>
                    <input type="submit" value="Login" />
                </td>
                <td></td>

            </tr>
        </table>
        login as Admin:-@Html.ActionLink("Login Here", "loginAdmin", "admins")
        <br>
        login as student:- @Html.ActionLink("Login Here", "studentlogin", "Students")
    </fieldset>
}
